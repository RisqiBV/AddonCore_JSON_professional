{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BOM Main Material Schema",
  "description": "JSON contract for Bill Of Material (Main Material) per Sales Order.",
  "type": "object",
  "properties": {
    "orderNO": {
      "type": "string",
      "maxLength": 25,
      "description": "PRO No (links to Sales Order)."
    },
    "itemCode": {
      "type": "string",
      "maxLength": 50,
      "description": "Material ItemCode (must belong to Item Master with category MAIN)."
    },
    "colorMaterial": {
      "type": "string",
      "maxLength": 250,
      "description": "Material color."
    },
    "consumption": {
      "type": "number",
      "multipleOf": 0.00001,
      "description": "Material requirement per 1 pcs finished good."
    },
    "unitCode": {
      "type": "string",
      "maxLength": 10,
      "description": "UnitCode of material (links to Unit Master)."
    },
    "colorFinishGood": {
      "type": "string",
      "maxLength": 250,
      "description": "Finished good color."
    },
    "sizeCode": {
      "type": "string",
      "maxLength": 50,
      "description": "Size code (links to Size Master)."
    },
    "orderQty": {
      "type": "number",
      "description": "Ordered quantity (pcs)."
    },
    "totalQty": {
      "type": "number",
      "description": "Total material requirement for the order."
    },
    "customerCode": {
      "type": "string",
      "maxLength": 50,
      "description": "Customer code."
    }
  },
  "required": [
    "orderNO",
    "itemCode",
    "colorMaterial",
    "consumption",
    "unitCode",
    "colorFinishGood",
    "sizeCode",
    "orderQty",
    "totalQty",
    "customerCode"
  ],
  "additionalProperties": false,
