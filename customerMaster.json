{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Customer Master Schema",
  "description": "JSON contract for Customer Master.",
  "type": "object",
  "properties": {
    "customerCode": {
      "type": "string",
      "maxLength": 10,
      "description": "Primary customer code."
    },
    "customerName": {
      "type": "string",
      "maxLength": 50,
      "description": "Customer name."
    },
    "address": {
      "type": "string",
      "maxLength": 250,
      "description": "Customer address."
    },
    "city": {
      "type": ["string", "null"],
      "maxLength": 50,
      "description": "City (optional)."
    },
    "province": {
      "type": ["string", "null"],
      "maxLength": 50,
      "description": "Province/state (optional)."
    },
    "country": {
      "type": "string",
      "maxLength": 50,
      "description": "Country."
    }
  },
  "required": ["customerCode", "customerName", "address", "country"],
  "additionalProperties": false,
