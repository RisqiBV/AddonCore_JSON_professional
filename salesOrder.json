{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sales Order Schema",
  "description": "JSON contract for Sales Order linking to Customer/Collection/Division/Size masters.",
  "type": "object",
  "properties": {
    "orderNO": {
      "type": "string",
      "maxLength": 25,
      "description": "Primary key for the sales order."
    },
    "article": {
      "type": "string",
      "maxLength": 50,
      "description": "Description of finished good."
    },
    "customerCode": {
      "type": "string",
      "maxLength": 10,
      "description": "FK to Customer Master."
    },
    "divisionCode": {
      "type": "string",
      "maxLength": 10,
      "description": "FK to Division Master."
    },
    "collectionCode": {
      "type": "string",
      "maxLength": 10,
      "description": "FK to Collection Master."
    },
    "deliveryDate": {
      "type": ["string", "null"],
      "maxLength": 20,
      "description": "Requested delivery date from customer (e.g., 23-Dec-25). Optional."
    },
    "productGroupId": {
      "type": "string",
      "maxLength": 50,
      "description": "Product group identifier."
    },
    "poCust": {
      "type": "string",
      "maxLength": 50,
      "description": "Customer Purchase Order number."
    },
    "colorFinishGood": {
      "type": "string",
      "maxLength": 250,
      "description": "Finished good color."
    },
    "sizeCode": {
      "type": "string",
      "maxLength": 10,
      "description": "FK to Size Master."
    },
    "qtyOrder": {
      "type": "number",
      "description": "Ordered quantity."
    },
    "orderType": {
      "type": "string",
      "enum": ["FOB", "CMT"],
      "maxLength": 10,
      "description": "Order type (FOB or CMT)."
    },
    "orc": {
      "type": "string",
      "maxLength": 50,
      "description": "ORC for finished good."
    }
  },
  "required": [
    "orderNO",
    "article",
    "customerCode",
    "divisionCode",
    "collectionCode",
    "productGroupId",
    "poCust",
    "colorFinishGood",
    "sizeCode",
    "qtyOrder",
    "orderType",
    "orc"
  ],
  "additionalProperties": false,
